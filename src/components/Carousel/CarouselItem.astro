---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    active?: string;
    background?: string;
}

const { title, description, image, link, active, background } = Astro.props;
---

<div
    class="hidden duration-700 ease-in-out bg-black w-full h-full"
    data-carousel-item
>
    <div
        class="absolute w-full h-full flex items-center justify-center gap-4 z-20 text-white
          px-4  md:px-8 lg:px-16 xl:px-24 2xl:px-32 py-2 
         "
    >
        <div
            class="max-w-screen-xl w-full h-full grid place-content-center grid-cols-1 gap-12 md:gap-24
            ms:grid-cols-2
            md:grid-cols-2
            lg:grid-cols-2
            xl:grid-cols-2
            2xl:grid-cols-2
            "
        >
            <div
                class="flex flex-col flex-1 justify-center items-center h-full w-full gap-4"
            >
                <div class="flex flex-col gap-4 text-pretty ">
                    <h2
                        class="text-2xl font-semibold text-white md:text-3xl"
                        data-carousel-title
                    >
                        {title}
                    </h2>
                    <p class="text-base text-white md:text-lg" data-carousel-description>
                        {description}
                    </p>
                </div>
                <div>
                    <a href={link} >
                        <button
                            class="px-4 py-2 bg-[#d0fff3] rounded-full text-black hover:bg-[#34aca6] transition dark:bg-[#1f5e5a] dark:text-white dark:hover:bg-[#1c4d49]"
                        >
                            Ver mas
                        </button>
                    </a>
                </div>
                
            </div>

            <div
                class="flex flex-col justify-center items-center text-center h-full w-full"
            >
                <img
                    class="rounded-xl shadow-lg"
                    src={image}
                    alt=""
                />
            </div>
        </div>
    </div>

    <img
        src={background}
        class="w-full h-full object-cover opacity-30 z-10"
        alt="..."
    />
</div>
