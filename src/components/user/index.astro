---
import Photo from "../user/inputs/inputphoto.astro";
import Date from "../user/inputs/inputsdate.astro";
import Number from "../user/inputs/inputsnumber.astro";
import Text from "../user/inputs/inputstext.astro";
import Select from "../user/select/select.astro";
import Celular from "../user/inputs/inputcelular.astro";
---

<form>
  <div class="grid gap-6 mb-6 md:grid-cols-2">
    <Text />
    <Celular />
    <Date />
    <Number />
    <Select />
    <Photo />
  </div>
  <button
    type="submit"
    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >Guardar</button
  >
</form>
