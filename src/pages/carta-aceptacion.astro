---
import Layout from '@/layouts/Layout.astro';


import { nisa } from "@/config/config";
export const prerender = true
---

<Layout title='Carta de aceptación' >
    <main>
        <div class="mx-4 py-6  sm:py-8 lg:py-12 flex items-center justify-center max-w-screen-lg ">
			<div class=" flex flex-col gap-8 md:px-8 md:items-center md:justify-center shadow-lg 
				border border-gray-200 dark:border-gray-800 rounded-lg bg-white dark:bg-gray-800 px-4 py-8
			">
			<h2 class="text-3xl font-bold text-gray-800 lg:text-4xl dark:text-white w-full text-center">
				Carta de Aceptación
			</h2>
				<img
				src={nisa.carta}
				alt="ISA Image"
				class="w-full max-w-2xl rounded-2xl shadow-lg"
			/>
            </div>
        </div>
 


    </main> 
</Layout>


<style>
	main {
		flex: 1;
		height: 100%;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
        gap: 1rem;
        overflow-y: auto;
	}


</style>