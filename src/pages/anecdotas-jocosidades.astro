---
import Layout from "@/layouts/Layout.astro";

import { getAnecdotas } from '@/api/anectodas';

import CardText from '@/components/CardText/CardText'

const anecdotas = await getAnecdotas();

---

<Layout title="Home">
    <main >
        <h1
        class="text-4xl font-bold text-center
            dark:text-white
        "
        > Anecdotas y jocosidades</h1>
        <div class="w-full h-full max-w-screen-lg grid grid-cols-1 sm:grid-cols-2
        md:grid-cols-2 lg:grid-cols-3 gap-10 pb-6
        ">
            <CardText anecdotas={anecdotas} client:load />
            
        </div>
    </main>
</Layout>

<style>
    main {
        flex: 1;
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-y: auto;
        padding: 2rem;
        gap: 2rem;
    }
    
</style>
