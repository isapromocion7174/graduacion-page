---
import Layout from '../../layouts/Layout.astro';


import Aniversariocard from "../../components/aniversario/card/aniversariocard.astro";

---

<Layout title='Aniversarios'>
    <main class="pb-12">
    <div 
        class="flex flex-col items-center justify-center w-full h-32"
    >
        <h1
            class="text-3xl text-center text-gray-700 font-bold leading-8 mt-5 mb-6
            dark:text-gray-100 sm:text-4xl sm:leading-10

            "
        >Aniversario</h1>
    </div>
    <div class="px-6"> 
        <Aniversariocard />

    </div>

    </main> 
</Layout>


<style>
	main {
		flex: 1;
		height: 100%;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
        gap: 1rem;
        overflow-y: auto;
	}


</style>